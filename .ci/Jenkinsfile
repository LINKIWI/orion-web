pipeline {
    agent {
        dockerfile {
            dir '.ci'
        }
    }

    stages {
        stage('Install') {
            parallel {
                stage('Node') {
                    steps {
                        sh 'npm-s3 install'
                    }
                }
                stage('Environment') {
                    steps {
                        sh 'cp .env.example .env'
                    }
                }
            }
        }
        stage('Test') {
            parallel {
                stage('Build') {
                    steps {
                        sh 'npm run build'
                    }
                }
                stage('Lint') {
                    steps {
                        sh 'npm run lint'
                    }
                }
                stage('Unit') {
                    steps {
                        sh 'npm run test'
                    }
                }
            }
        }
    }

    post {
        always {
            deleteDir()
        }
    }
}
