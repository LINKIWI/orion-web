pipeline {
    agent {
        docker 'docker.internal.kevinlin.info/infra/ci-base:0.0.5'
    }

    stages {
        stage('Install') {
            parallel {
                stage('Node') {
                    steps {
                        sh 'npm-s3 install'
                    }
                }
                stage('Environment') {
                    steps {
                        sh 'cp .env.example .env'
                    }
                }
            }
        }
        stage('Test') {
            parallel {
                stage('Build') {
                    environment {
                        NODE_ENV = 'production'
                    }
                    steps {
                        sh 'npm run build'
                    }
                }
                stage('Lint') {
                    steps {
                        sh 'npm run lint'
                    }
                }
                stage('Unit') {
                    steps {
                        sh 'npm run test'
                    }
                }
            }
        }
    }

    post {
        always {
            archive 'dist/index.html'
            deleteDir()
        }
    }
}
